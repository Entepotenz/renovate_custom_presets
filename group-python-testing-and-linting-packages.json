{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": [
        "poetry",
        "pip_requirements"
      ],
      "groupName": "Testing/Linting Tools",
      "minimumReleaseAge": "3 days",
      "matchPackageNames": [
        "/^black/",
        "/^coverage/",
        "/^flake8/",
        "/^mypy/",
        "/^pytest/",
        "/^ruff/"
      ]
    }
  ]
}
